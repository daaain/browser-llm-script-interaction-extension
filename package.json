{
  "name": "browser-llm-script-interaction-extension",
  "version": "1.0.0",
  "description": "A browser extension that enables LLMs to interact through a chat interface",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:chrome": "wxt -b chrome",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox && node fix-firefox-paths.js",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:ui": "vitest --run --ui",
    "test:e2e": "pnpm build:chrome && playwright test",
    "test:e2e:ui": "pnpm build:chrome && playwright test --ui",
    "test:e2e:headed": "pnpm build:chrome && playwright test --headed",
    "test:e2e:debug": "pnpm build:chrome && playwright test --debug",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@playwright/test": "^1.54.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.1",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "webextension-polyfill": "^0.12.0",
    "wxt": "^0.20.8"
  }
}
