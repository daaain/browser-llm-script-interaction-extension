{
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:*/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Open LLM Chat",
    "default_popup": "src/sidebar/index.html"
  },
  "options_ui": {
    "page": "src/settings/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
