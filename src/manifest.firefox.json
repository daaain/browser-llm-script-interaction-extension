{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "browser-llm-chat@extension.local"
    }
  },
  "permissions": [
    "storage",
    "http://localhost:*/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "scripts": ["src/background/index.ts"],
    "persistent": true
  },
  "sidebar_action": {
    "default_title": "LLM actions",
    "default_panel": "src/sidebar/index.html",
    "default_icon": "icons/icon-16.png"
  },
  "options_ui": {
    "page": "src/settings/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
